<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagem3"
            android:layout_width="72dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/atividade" />

        <TextView
            android:id="@+id/tarefinha3"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:editable="false"
            android:paddingLeft="14sp"
            android:paddingTop="19sp"
            android:paddingRight="14sp"
            android:paddingBottom="14sp"
            android:text="Atividade"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagem2"
            android:layout_width="73dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/azul" />

        <TextView
            android:id="@+id/tarefinha2"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="14sp"
            android:paddingTop="19sp"
            android:paddingRight="14sp"
            android:paddingBottom="14sp"
            android:text="Atividade"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagem1"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/roxoatt" />

        <TextView
            android:id="@+id/tarefinha"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="14sp"
            android:paddingTop="19sp"
            android:paddingRight="14sp"
            android:paddingBottom="14sp"
            android:text="Atividade"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

    </LinearLayout>
</LinearLayout>